setdefaults () {

UPDATEVARIABLES=true
PRINTOUTPUT=true
RMFILES=false


MAINENE=1

RELREPETITIONS=1

RECALCBULK=true
RECALCSURFACE=true

setincardefaults  2>&-
setkpointsdefaults  2>&-
setstructuraldefaults  2>&-
setenergydefaults  2>&-


}
 
 
 
 
########################################################################################### 
########################################################################################### 
########################################################################################### 
 
 
setenergydefaults () {

for str in $allcrystals ; do
str="${str##*/}"
name="ENERGY_$str"
eval $name=NaN
done

for str in $allcrystals_supercells ; do
str="${str##*/}"
name="ENERGY_$str"
eval $name=NaN
done

for str in $allsurfaces ; do
str="${str##*/}"
name="ENERGY_$str"
eval $name=NaN
done

for str in $allsurfaces_supercells ; do
str="${str##*/}"
name="ENERGY_$str"
eval $name=NaN
done

for str in $allmolecules ; do
str="${str##*/}"
name="ENERGY_$str"
eval $name=NaN
done

#for str in $allmolecules_supercells ; do
#str="${str##*/}"
#name="ENERGY_$str"
#eval $name=NaN
#done

}




 
 
 
 
########################################################################################### 
########################################################################################### 
########################################################################################### 
 
 
setincardefaults () {

natomsss=`echo $ATOMS_PER_SUBCELL \* $SUPERCELL_FACTOR \* $SUPERCELL_FACTOR \* $SUPERCELL_FACTOR | bc -l`

#starting parameters:
ISTART=0
ICHARG=2

#writing parameters:
LWAVE=".FALSE."
LCHARG=".FALSE."
NWRITE=2

#electronic optimization:
ENCUT=400
ALGO="Normal"
NELM=100
EDIFF="1E-06"
NBANDS=48

GGA="PE"
METAGGA=""
LASPH=".TRUE."

NOMEGA=12

#kpoint sampling:
ISMEAR=1
SIGMA=0.2
ISYM=2
KGAMMA=".TRUE."

#magnetism:
ISPIN=1
MAGMOM="$natomsss*1.0"

#performance optimization:
KPAR=1
NCORE=1
LREAL=.FALSE.

#defaults for relaxation:
IBRION=2
EDIFFG=-0.001        #EDIFF="1E-05"
NSW=100
POTIM=0.5
ISIF=3

#defaults for DOS:
NEDOS=1001
EMAX=
EMIN=

#defaults for MD:
TEBEG=100
TEEND=700

#defaults for thermostat & ensembles:
MDALGO=3
LANGEVIN_GAMMA="1*5.0"
LANGEVIN_GAMMA_L="1*5.0"

#defaults for machine learned force fields:
ML_LMLFF=".TRUE."
ML_ISTART=0
ML_RCUT1=8.0
ML_RCUT2=5.0


}
 
 
 
 
########################################################################################### 
########################################################################################### 
########################################################################################### 
 
 
setkpointsdefaults () {

for str in $allcrystals ; do
str="${str##*/}"
name="KPOINTS_$str"
eval $name=12
done

for str in $allcrystals_supercells ; do
str="${str##*/}"
name="KPOINTS_$str"
eval $name=6
done

for str in $allsurfaces ; do
str="${str##*/}"
name="KPOINTS_$str"
eval $name=12
done

for str in $allsurfaces_supercells ; do
str="${str##*/}"
name="KPOINTS_$str"
eval $name=6
done

}

 
 
 
 
