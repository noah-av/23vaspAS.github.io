y3=`echo $d \* $ny - $d + $d \* 0.5 | bc -l`
z3=`echo $d \* $nz - $d + $d \* 0.0 | bc -l`
x4=`echo $d \* $nx - $d + $d \* 0.0 | bc -l`
y4=`echo $d \* $ny - $d + $d \* 0.0 | bc -l`
z4=`echo $d \* $nz - $d + $d \* 0.5 | bc -l`
echo $x2 " " $y2 " " $z2 >> POSCAR
echo $x3 " " $y3 " " $z3 >> POSCAR
echo $x4 " " $y4 " " $z4 >> POSCAR
done
done
done

