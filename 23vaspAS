c=`echo $c \* $SUPERCELL_FACTOR / 1.4142135623730950488016887242097 | bc -l`
h=`echo 0.35355339664904762812604531564108 \* $NUMBER_OF_LAYERS / $SUPERCELL_FACTOR + $VACUUM_SIZE_sup_diamond_100 / $c | bc -l`

xx=`echo 1 \* $c | bc -l`
xy=`echo 0 \* $c | bc -l`
xz=`echo 0 \* $c | bc -l`
yx=`echo 0 \* $c | bc -l`
yy=`echo 1 \* $c | bc -l`
yz=`echo 0 \* $c | bc -l`
zx=`echo 0 \* $c | bc -l`
zy=`echo 0 \* $c | bc -l`
