y1=`echo $d \* $ny - $d + $d \* 0.0 | bc -l`
z1=`echo $d \* $nz - $d + $d \* 0.0 | bc -l`
echo $x1 " " $y1 " " $z1 >> POSCAR
done
done
done
for nx in $(seq 1 1 $SUPERCELL_FACTOR); do
for ny in $(seq 1 1 $SUPERCELL_FACTOR); do
