NUMBER_OF_ELEMENTS=2
NUMBER_OF_ATOMS_PER_SUBCELL_PER_ELEMENT="1 3"

}
EOF

source poscardescription
poscardescription

cat > defaultshiftsandratios << EOF
defaultshiftsandratios () {

x=x

}
EOF

v=`echo $ATOMS_PER_SUBCELL \* $VOLUME_xo3 \* $SUPERCELL_FACTOR \* $SUPERCELL_FACTOR \* $SUPERCELL_FACTOR | bc -l`

array=($NUMBER_OF_ATOMS_PER_SUBCELL_PER_ELEMENT)
natoms1=${array[0]}
natoms2=${array[1]}

