STRUCTURE_TYPE=crystal
LATTICE_SYSTEM=hexagonal
BRAVAIS_LATTICE=P

ATOMS_PER_CONVENTIONAL_CELL=4
ATOMS_PER_SUBCELL=4

NUMBER_OF_SHIFTS=0

NUMBER_OF_ELEMENTS=1
