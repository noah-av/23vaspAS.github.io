########################################################################################### 
########################################################################################### 
 
 
hcp_100 () {

cat > poscardescription << EOF
poscardescription () {

THISISSUPERCELL=false
SUPERCELL_FACTOR=1
NUMBER_OF_LAYERS=$NUMBER_OF_LAYERS_hcp_100

STRUCTURE_TYPE=surface
LATTICE_SYSTEM=hexagonal
BRAVAIS_LATTICE=P

ATOMS_PER_CONVENTIONAL_CELL=2
ATOMS_PER_SUBCELL=4

NUMBER_OF_ATOMS_PER_LAYER_PER_CELL=1

NUMBER_OF_SHIFTS=0

NUMBER_OF_ELEMENTS=1
NUMBER_OF_ATOMS_PER_SUBCELL_PER_ELEMENT="1"

}
EOF

source poscardescription
poscardescription

cat > defaultshiftsandratios << EOF
defaultshiftsandratios () {

C_A_RATIO_hcp_100=1.63299

}
EOF

if [ -z $C_A_RATIO_hcp_100 ] ; then
source defaultshiftsandratios
defaultshiftsandratios
fi

array=($NUMBER_OF_ATOMS_PER_SUBCELL_PER_ELEMENT)
natoms1=${array[0]}

natoms1=`echo $natoms1 \* $SUPERCELL_FACTOR \* $SUPERCELL_FACTOR \* $NUMBER_OF_LAYERS | bc -l`

v=`echo $ATOMS_PER_CONVENTIONAL_CELL \* $VOLUME_hcp_100 | bc -l`
v=`echo 1.1547005383792515290182975610039 \* $v / $C_A_RATIO_hcp_100 | bc -l`
c=`echo " e( l($v)/3 ) " | bc -l`
c=`echo $c \* $SUPERCELL_FACTOR | bc -l`
h=`echo 0.25 \* 1.73205080756887729352744634150587 \* $NUMBER_OF_LAYERS / $SUPERCELL_FACTOR + $VACUUM_SIZE_hcp_100 / $c | bc -l`

xx=`echo 1 \* $c | bc -l`
xy=`echo 0 \* $c | bc -l`
xz=`echo 0 \* $c | bc -l`
yx=`echo 0 \* $c | bc -l`
yy=`echo $C_A_RATIO_hcp_100 \* $c | bc -l`
yz=`echo 0 \* $c | bc -l`
zx=`echo 0 \* $c | bc -l`
zy=`echo 0 \* $c | bc -l`
zz=`echo $h \* $c | bc -l`

cat > POSCAR << EOF
hcp_100 surface $SUPERCELL_FACTOR ; layers: $NUMBER_OF_LAYERS ; vacuum: $VACUUM_SIZE_hcp_100
1.0
$xx $xy $xz
$yx $yy $yz
$zx $zy $zz
$POTCAR
$natoms1
Selective dynamics
Cartesian
EOF

for ig in $(seq 1 1 $NUMBER_OF_LAYERS); do

for nx in $(seq 1 1 $SUPERCELL_FACTOR); do
for ny in $(seq 1 1 $SUPERCELL_FACTOR); do

x1=`echo 1 \* $nx - 1 + 0 \* $ny - 0 + 0.50000000000000000000000000000000 | bc -l`
y1=`echo 0 \* $nx - 0 + $C_A_RATIO_hcp_100 \* $ny - $C_A_RATIO_hcp_100 + $C_A_RATIO_hcp_100 \* 0.25000000000000000000000000000000 | bc -l`
x2=`echo 1 \* $nx - 1 + 0 \* $ny - 0 + 0.50000000000000000000000000000000 | bc -l`
y2=`echo 0 \* $nx - 0 + $C_A_RATIO_hcp_100 \* $ny - $C_A_RATIO_hcp_100 + $C_A_RATIO_hcp_100 \* 0.75000000000000000000000000000000 | bc -l`
x3=`echo 1 \* $nx - 1 + 0 \* $ny - 0 + 0.00000000000000000000000000000000 | bc -l`
y3=`echo 0 \* $nx - 0 + $C_A_RATIO_hcp_100 \* $ny - $C_A_RATIO_hcp_100 + $C_A_RATIO_hcp_100 \* 0.25000000000000000000000000000000 | bc -l`
x4=`echo 1 \* $nx - 1 + 0 \* $ny - 0 + 0.00000000000000000000000000000000 | bc -l`
y4=`echo 0 \* $nx - 0 + $C_A_RATIO_hcp_100 \* $ny - $C_A_RATIO_hcp_100 + $C_A_RATIO_hcp_100 \* 0.75000000000000000000000000000000 | bc -l`

x1=`echo $c \* $x1 / $SUPERCELL_FACTOR | bc -l`
y1=`echo $c \* $y1 / $SUPERCELL_FACTOR | bc -l`
x2=`echo $c \* $x2 / $SUPERCELL_FACTOR | bc -l`
y2=`echo $c \* $y2 / $SUPERCELL_FACTOR | bc -l`
x3=`echo $c \* $x3 / $SUPERCELL_FACTOR | bc -l`
y3=`echo $c \* $y3 / $SUPERCELL_FACTOR | bc -l`
x4=`echo $c \* $x4 / $SUPERCELL_FACTOR | bc -l`
y4=`echo $c \* $y4 / $SUPERCELL_FACTOR | bc -l`


if [ "$LAYER_HIGHTS_hcp_100" = "defaulthights" ]; then   #different from rest of surfaces because layers not equally spaced
res=$(($ig % $ATOMS_PER_SUBCELL))
if [ $(echo "$res == 0" | bc) -eq 1 ]; then
hight=`echo  0.25 \* 1.73205080756887729352744634150587 \* $ig - 1.00 \* 1.73205080756887729352744634150587 + 0.66666666666666666666666666666667 \* 1.73205080756887729352744634150587 | bc -l`
fi
if [ $(echo "$res == 1" | bc) -eq 1 ]; then
hight=`echo  0.25 \* 1.73205080756887729352744634150587 \* $ig - 0.25 \* 1.73205080756887729352744634150587 | bc -l`
fi
if [ $(echo "$res == 2" | bc) -eq 1 ]; then
hight=`echo  0.25 \* 1.73205080756887729352744634150587 \* $ig - 0.50 \* 1.73205080756887729352744634150587 + 0.16666666666666666666666666666667 \* 1.73205080756887729352744634150587 | bc -l`
fi
if [ $(echo "$res == 3" | bc) -eq 1 ]; then
hight=`echo  0.25 \* 1.73205080756887729352744634150587 \* $ig - 0.75 \* 1.73205080756887729352744634150587 + 0.5 \* 1.73205080756887729352744634150587 | bc -l`
fi
hight=`echo  $c \* $hight / $SUPERCELL_FACTOR | bc -l`
else
let iii=$ig-1
hightsarray=($LAYER_HIGHTS_hcp_100)
hight=${hightsarray[$iii]}
fi

res=$(($ig % $ATOMS_PER_SUBCELL))


seldynup=`echo $NUMBER_OF_LAYERS - $ig | bc -l`
seldyndown=`echo $SELECTIVE_DYNAMICS_DEPTH_hcp_100 + 1 | bc -l`

if [ $(echo "$seldynup < $SELECTIVE_DYNAMICS_DEPTH_hcp_100" | bc) -eq 1 ]; then

if [ $(echo "$res == 0" | bc) -eq 1 ]; then
echo "$x1  $y1 " $hight " T T T "  >> POSCAR
fi
if [ $(echo "$res == 1" | bc) -eq 1 ]; then
echo "$x2  $y2 " $hight " T T T "  >> POSCAR
fi
if [ $(echo "$res == 2" | bc) -eq 1 ]; then
echo "$x3  $y3 " $hight " T T T "  >> POSCAR
fi
if [ $(echo "$res == 3" | bc) -eq 1 ]; then
echo "$x4  $y4 " $hight " T T T "  >> POSCAR
fi

elif [ $(echo "$ig < $seldyndown" | bc) -eq 1 ]; then

if [ $(echo "$res == 0" | bc) -eq 1 ]; then
echo "$x1  $y1 " $hight " T T T "  >> POSCAR
fi
if [ $(echo "$res == 1" | bc) -eq 1 ]; then
echo "$x2  $y2 " $hight " T T T "  >> POSCAR
fi
if [ $(echo "$res == 2" | bc) -eq 1 ]; then
echo "$x3  $y3 " $hight " T T T "  >> POSCAR
fi
if [ $(echo "$res == 3" | bc) -eq 1 ]; then
echo "$x4  $y4 " $hight " T T T "  >> POSCAR
fi

else

if [ $(echo "$res == 0" | bc) -eq 1 ]; then
echo "$x1  $y1 " $hight " F F F "  >> POSCAR
fi
if [ $(echo "$res == 1" | bc) -eq 1 ]; then
echo "$x2  $y2 " $hight " F F F "  >> POSCAR
fi
if [ $(echo "$res == 2" | bc) -eq 1 ]; then
echo "$x3  $y3 " $hight " F F F "  >> POSCAR
fi
if [ $(echo "$res == 3" | bc) -eq 1 ]; then
echo "$x4  $y4 " $hight " F F F "  >> POSCAR
fi

fi


done
done

done

numberofatomsthatwereaddedbefore=0

}



 
 
 
 
