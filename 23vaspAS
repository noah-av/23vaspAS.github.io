for nz in $(seq 1 1 $SUPERCELL_FACTOR); do
x1=`echo $d \* $nx - $d + $d \* 0.0 | bc -l`
y1=`echo $d \* $ny - $d + $d \* 0.0 | bc -l`
z1=`echo $d \* $nz - $d + $d \* 0.0 | bc -l`
x2=`echo $d \* $nx - $d + $d \* 0.5 | bc -l`
y2=`echo $d \* $ny - $d + $d \* 0.5 | bc -l`
z2=`echo $d \* $nz - $d + $d \* 0.5 | bc -l`
