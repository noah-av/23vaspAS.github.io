electronicmin () {            # $2 is for addpointdefect ... / addadsorbant ...

secs=$SECONDS

mkdir electronicmin_${1}
cd electronicmin_${1}

if [ "$PRINTOUTPUT" = true ]; then
if [ -n "$METAGGA" ]; then
echo " "
echo " ###########################################################################################"
echo " "
echo " Running now: electronicmin $1 $2  ;   $ALGO $METAGGA $POTCAR "
echo " " >> $MAINDIR/output.txt
echo " ###########################################################################################" >> $MAINDIR/output.txt
echo " " >> $MAINDIR/output.txt
echo " Running now: electronicmin $1 $2  ;   $ALGO $METAGGA $POTCAR " >> $MAINDIR/output.txt
else
echo " "
echo " ###########################################################################################"
echo " "
echo " Running now: electronicmin $1 $2  ;   $ALGO $GGA $POTCAR "
echo " " >> $MAINDIR/output.txt
echo " ###########################################################################################" >> $MAINDIR/output.txt
echo " " >> $MAINDIR/output.txt
echo " Running now: electronicmin $1 $2  ;   $ALGO $GGA $POTCAR " >> $MAINDIR/output.txt
fi
fi


$1 ;

if [ -n "$2" ]; then
$2 "$3" "$4" "$5" "$6"
fi

if [ -n "$7" ]; then
$7 "$8" "$9" "${10}" "${11}"
fi

if [ -n "${12}" ]; then
${12} "${13}" "${14}" "${15}" "${16}"
fi

if [ -n "${17}" ]; then
${17} "${18}" "${19}" "${20}" "${21}"
fi

if [ -n "${22}" ]; then
${22} "${23}" "${24}" "${25}" "${26}"
fi

if [ -n "${27}" ]; then
${27} "${28}" "${29}" "${30}" "${31}"
fi

if [ -n "${32}" ]; then
${32} "${33}" "${34}" "${35}" "${36}"
fi

if [ -n "${37}" ]; then
${37} "${38}" "${39}" "${40}" "${41}"
fi

if [ -n "${42}" ]; then
${42} "${43}" "${44}" "${45}" "${46}"
fi

if [ -n "${47}" ]; then
${47} "${48}" "${49}" "${50}" "${51}"
fi

if [ -n "${52}" ]; then
${52} "${53}" "${54}" "${55}" "${56}"
fi

if [ -n "${57}" ]; then
${57} "${58}" "${59}" "${60}" "${61}"
fi

if [ -n "${62}" ]; then
${62} "${63}" "${64}" "${65}" "${66}"
fi

if [ -n "${67}" ]; then
${67} "${68}" "${69}" "${70}" "${71}"
fi

if [ -n "${72}" ]; then
${72} "${73}" "${74}" "${75}" "${76}"
fi

if [ -n "${77}" ]; then
${77} "${78}" "${79}" "${80}" "${81}"
fi

buildkpoints $1
buildincar
buildpotcar
$VASP

if [ "$RMFILES" = true ]; then
rm -rf ICONST INCAR REPORT defaultshiftsandratios XDATCAR KPOINTS CHGCAR poscardescription POSCAR CONTCAR DOSCAR vasprun.xml WAVECAR minipotcar POTCAR EIGENVAL PCDAT CHG IBZKPT
fi

isInFile=$(cat OUTCAR | grep -c "General timing and accounting information")
if [ $isInFile -eq 0 ]; then
ANERROROCCURED=true
fi

array1=($(grep 'number of ions' OUTCAR))
value1=${array1[11]}

if [ "$ALGO" = RPAR ]; then

array2=($(grep 'HF-free energy' OUTCAR))
array3=($(grep 'HF+RPA corr. energy' OUTCAR))
array4=($(grep 'HF+E_corr' OUTCAR))
array5=($(grep 'exchange ACFDT corr.' OUTCAR))

value2=${array2[4]}
value3=${array2[5]}
value4=${array2[2]}
value5=${array2[4]}

value2=`echo $value2 / $value1 | bc -l`
value3=`echo $value3 / $value1 | bc -l`
value4=`echo $value4 / $value1 | bc -l`
value5=`echo $value5 / $value1 | bc -l`

VARIABLEFORCONVERGENCE=$value3

cd ..

if [ "$PRINTOUTPUT" = true ]; then
  echo " "
  echo " resulting HF-free energy per atom:          $value2 eV"
  echo " resulting HF+RPA corr. energy per atom:     $value3 eV"
  echo " resulting HF+E_corr(extrapolated) per atom: $value4 eV"
  echo " resulting exchange ACFDT corr. per atom:    $value5 eV"
  echo " " >> $MAINDIR/output.txt
  echo " resulting HF-free energy per atom:          $value2 eV" >> $MAINDIR/output.txt
  echo " resulting HF+RPA corr. energy per atom:     $value3 eV" >> $MAINDIR/output.txt
  echo " resulting HF+E_corr(extrapolated) per atom: $value4 eV" >> $MAINDIR/output.txt
  echo " resulting exchange ACFDT corr. per atom:    $value5 eV" >> $MAINDIR/output.txt
fi


else


array2=($(grep 'free  en' OUTCAR))
array3=($(grep 'energy without entropy' OUTCAR))

value2=${array2[4]}
value3=${array3[4]}
value4=${array3[7]}

value2=`echo $value2 / $value1 | bc -l`
value3=`echo $value3 / $value1 | bc -l`
value4=`echo $value4 / $value1 | bc -l`

if [ "$UPDATEVARIABLES" = true ]; then

name="FREE_ENERGY_$1"
eval $name=$value2
name="ENERGY_WITHOUT_ENTROPY_$1"
eval $name=$value3
name="ENERGY_SIGMA_ZERO_$1"
eval $name=$value4

if [ "$MAINENE" = 1 ]; then
name="ENERGY_$1"
eval $name=$value2
fi
if [ "$MAINENE" = 2 ]; then
name="ENERGY_$1"
eval $name=$value3
fi
if [ "$MAINENE" = 3 ]; then
name="ENERGY_$1"
eval $name=$value4
fi

fi

if [ "$MAINENE" = 1 ]; then
mainene=$value2
fi
if [ "$MAINENE" = 2 ]; then
mainene=$value3
fi
if [ "$MAINENE" = 3 ]; then
mainene=$value4
fi

VARIABLEFORCONVERGENCE=$mainene

cd ..

if [ "$PRINTOUTPUT" = true ]; then
  echo " "
  echo " resulting free energy per atom:            $value2 eV "
  echo " resulting energy without entropy per atom: $value3 eV "
  echo " resulting energy(sigma->0) per atom:       $value4 eV "
if [ "$UPDATEVARIABLES" = true ]; then
  echo " ENERGY_$1 has been updated accordingly "
fi
  echo " " >> $MAINDIR/output.txt
  echo " resulting free energy per atom:            $value2 eV " >> $MAINDIR/output.txt
  echo " resulting energy without entropy per atom: $value3 eV " >> $MAINDIR/output.txt
  echo " resulting energy(sigma->0) per atom:       $value4 eV " >> $MAINDIR/output.txt
if [ "$UPDATEVARIABLES" = true ]; then
  echo " ENERGY_$1 has been updated accordingly " >> $MAINDIR/output.txt
fi
fi


fi


let secs=$SECONDS-$secs
let TOTALTIME=$TOTALTIME+$secs
hrs=$(( secs/3600 )); mins=$(( (secs-hrs*3600)/60 )); secs=$(( secs-hrs*3600-mins*60 ))
if [ "$PRINTOUTPUT" = true ]; then
echo " "
echo " ellapsed time: $hrs h $mins min $secs s"
echo " " >> $MAINDIR/output.txt
echo " ellapsed time: $hrs h $mins min $secs s" >> $MAINDIR/output.txt
fi


if [ "$PRINTOUTPUT" = true ]; then
if [ "$ANERROROCCURED" = true ]; then
  echo " "
  echo " An ERROR occured during this calculation - please check what happened!"
  echo " " >> $MAINDIR/output.txt
  echo " An ERROR occured during this calculation - please check what happened!" >> $MAINDIR/output.txt
ANERROROCCURED=false
fi
fi

}

 
 
 
 
