y7=`echo $d \* $ny - $d + $d \* 0.0 | bc -l`
z7=`echo $d \* $nz - $d + $d \* 0.5 | bc -l`
x8=`echo $d \* $nx - $d + $d \* 0.5 | bc -l`
y8=`echo $d \* $ny - $d + $d \* 0.5 | bc -l`
z8=`echo $d \* $nz - $d + $d \* 0.5 | bc -l`
x9=`echo $d \* $nx - $d + $d \* 0.75 | bc -l`
y9=`echo $d \* $ny - $d + $d \* 0.75 | bc -l`
z9=`echo $d \* $nz - $d + $d \* 0.25 | bc -l`
x10=`echo $d \* $nx - $d + $d \* 0.75 | bc -l`
y10=`echo $d \* $ny - $d + $d \* 0.25 | bc -l`
z10=`echo $d \* $nz - $d + $d \* 0.75 | bc -l`
x11=`echo $d \* $nx - $d + $d \* 0.25 | bc -l`
y11=`echo $d \* $ny - $d + $d \* 0.75 | bc -l`
z11=`echo $d \* $nz - $d + $d \* 0.75 | bc -l`
x12=`echo $d \* $nx - $d + $d \* 0.75 | bc -l`
y12=`echo $d \* $ny - $d + $d \* 0.25 | bc -l`
z12=`echo $d \* $nz - $d + $d \* 0.25 | bc -l`
x13=`echo $d \* $nx - $d + $d \* 0.25 | bc -l`
y13=`echo $d \* $ny - $d + $d \* 0.75 | bc -l`
z13=`echo $d \* $nz - $d + $d \* 0.25 | bc -l`
x14=`echo $d \* $nx - $d + $d \* 0.25 | bc -l`
y14=`echo $d \* $ny - $d + $d \* 0.25 | bc -l`
z14=`echo $d \* $nz - $d + $d \* 0.75 | bc -l`
echo $x5 " " $y5 " " $z5 >> POSCAR
echo $x6 " " $y6 " " $z6 >> POSCAR
echo $x7 " " $y7 " " $z7 >> POSCAR
echo $x8 " " $y8 " " $z8 >> POSCAR
echo $x9 " " $y9 " " $z9 >> POSCAR
echo $x10 " " $y10 " " $z10 >> POSCAR
echo $x11 " " $y11 " " $z11 >> POSCAR
echo $x12 " " $y12 " " $z12 >> POSCAR
echo $x13 " " $y13 " " $z13 >> POSCAR
echo $x14 " " $y14 " " $z14 >> POSCAR
done
done
done

if [ "$READSHIFTS" = true ]; then
cat > readshifts << EOF
readshifts () {

x=x

}
EOF
fi

