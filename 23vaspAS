y1=`echo $d \* $ny - $d + $d \* 0.6666666666666666666666 | bc -l`
z1=`echo $d \* $nz - $d + $d \* 0.25 | bc -l`
x2=`echo $d \* $nx - $d + $d \* 0.6666666666666666666666 | bc -l`
y2=`echo $d \* $ny - $d + $d \* 0.3333333333333333333333 | bc -l`
z2=`echo $d \* $nz - $d + $d \* 0.75 | bc -l`
